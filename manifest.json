{
    "manifest_version": 3,
    "name": "Clarity Lens Extension",
    "version": "1.0",
    "description": "A simple Manifest V3 extension to inject content.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://clarity-lens-web.vercel.app/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "64": "64.png",
            "128": "128.png"
        }
    },
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "64": "64.png",
        "128": "128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
     "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
    "web_accessible_resources": [
        {
            "resources": [
                "welcome.css",
                "welcome.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}