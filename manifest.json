{
    "manifest_version": 3,
    "name": "Clarity Lens Extension",
    "version": "1.0",
    "description": "A simple Manifest V3 extension to inject content.",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "64": "64.png",
            "128": "128.png"
        }
    }
}
